{% extends "layouts/journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
  {{ t('thriller-books:pageTitle') }}
{% endblock %}

{% block journey_form %}
<div class="govuk-phase-banner">
  <p class="govuk-phase-banner__content">
    <strong class="govuk-tag govuk-phase-banner__content__tag">
      alpha
    </strong>
    <span class="govuk-phase-banner__text govuk-body">
      This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.
    </span>
  </p>
</div>
</br>
<div class="govuk-grid-row">
      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-fieldset__heading">
            What are your organisation bank or building society account details?
          </h1>
        </legend>
        <p class="govuk-body">We need this to get information about your organisation.</p>

        <div class="govuk-form-group">
          <label class="govuk-label" for="account-holder-name">
            Name on the account
          </label>
          <input class="govuk-input" id="account-holder-name" name="account-holder-name" value="{{ data['account-holder-name'] }}" type="text" spellcheck="false">
        </div>

        <div class="govuk-form-group">
          <label class="govuk-label" for="sort-code">
            Sort code
          </label>
          <div id="sort-code-hint" class="govuk-hint">
            Must be 6 digits long
          </div>
          <input class="govuk-input govuk-input--width-5" id="sort-code" name="sort-code" value="{{ data['sort-code'] }}" type="text" spellcheck="false" aria-describedby="sort-code-hint" pattern="[0-9]*" inputmode="numeric">
        </div>

        <div class="govuk-form-group">
          <label class="govuk-label" for="account-number">
            Account number
          </label>
          <div id="account-number-hint" class="govuk-hint">
            Must be between 6 and 8 digits long
          </div>
          <input class="govuk-input govuk-input--width-10" id="account-number" name="account-number" value="{{ data['account-number'] }}" type="text" spellcheck="false" aria-describedby="account-number-hint" pattern="[0-9]*" inputmode="numeric">
        </div>

        <div class="govuk-form-group">
          <label class="govuk-label" for="roll-number">
            Building society roll number (if you have one)
          </label>
          <div id="roll-number-hint" class="govuk-hint">
            You can find it on your card, statement or passbook
          </div>
          <input class="govuk-input govuk-input--width-10" id="roll-number" name="roll-number" value="{{ data['roll-number'] }}" type="text" spellcheck="false" aria-describedby="roll-number-hint">
        </div>

      </fieldset>
</div>
  {% endblock %}
